---
import Footer from '@/components/Footer.astro'
import Header from '@/components/Header.astro'
import Layout from '@/layouts/Layout.astro'

const { title } = Astro.props;
---

<Layout title={title}>
  <Header />
  <main class="max-w-7xl mx-auto min-h-[80vh] font-serif">
    <slot />
  </main>
  <Footer />
</Layout>
